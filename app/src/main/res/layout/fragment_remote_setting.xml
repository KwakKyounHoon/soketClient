<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/remote_dialog_padding_top"
    android:paddingLeft="@dimen/remote_dialog_padding_left"
    android:paddingRight="@dimen/remote_dialog_padding_right"
    >
    <TextView
        android:text="Air Control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/text_air_ctrl"
        android:textSize="@dimen/remote_dialog_text_size"
        />

    <Switch
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_air_ctrl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/switch_air" />

    <TextView
        android:layout_marginTop="@dimen/remote_dialog_item_margin_top"
        android:text="Air Teperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch_air"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/text_air_temp"
        android:textSize="@dimen/remote_dialog_text_size"
        />
    <TextView
        android:text="-Â°C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:id="@+id/text_air_value"
        android:layout_alignBottom="@+id/text_air_temp"
        android:layout_toRightOf="@+id/text_air_temp"
        android:layout_toEndOf="@+id/text_air_temp"
        android:layout_marginStart="15dp" />
    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_air_temp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/seekBar"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:max="30"
        />

    <TextView
        android:layout_marginTop="@dimen/remote_dialog_item_margin_top"
        android:text="Defrost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/remote_dialog_text_size"
        android:id="@+id/text_defrost" />

    <Switch
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_defrost"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/switch_defrost" />

    <TextView
        android:text="Heating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_heating"
        android:layout_alignTop="@+id/text_defrost"
        android:layout_alignLeft="@+id/switch_heating"
        android:layout_alignStart="@+id/switch_heating"
        android:textSize="@dimen/remote_dialog_text_size"
        />

    <Switch
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_heating"
        android:layout_alignLeft="@+id/text_air_value"
        android:layout_alignStart="@+id/text_air_value"
        android:id="@+id/switch_heating" />

    <TextView
        android:layout_marginTop="@dimen/remote_dialog_item_margin_top"
        android:text="Duration of ignition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch_heating"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/text_ignition"
        android:textSize="@dimen/remote_dialog_text_size"
        />
    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:id="@+id/text_ignition_value"
        android:layout_alignBottom="@+id/text_ignition"
        android:layout_toRightOf="@+id/text_ignition"
        android:layout_toEndOf="@+id/text_ignition"
        android:layout_marginStart="15dp" />
    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_ignition"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/seekBar_ignition"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:max="10" />

    <Button
        android:text="OK"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingBottom="6dp"
        android:id="@+id/btn_ok" />


</RelativeLayout>
